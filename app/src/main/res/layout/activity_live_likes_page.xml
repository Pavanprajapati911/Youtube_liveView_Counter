<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".live_views_page">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"/>

    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_242sdp"
        android:layout_height="@dimen/_73sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:cardElevation="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_17sdp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_background"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_160sdp"
            android:background="@drawable/like"/>

        <TextView
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_64sdp"
            android:text="Total likes"/>

        <TextView
            android:id="@+id/total_likes"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_34sdp"
            android:text="updating"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>








</RelativeLayout>